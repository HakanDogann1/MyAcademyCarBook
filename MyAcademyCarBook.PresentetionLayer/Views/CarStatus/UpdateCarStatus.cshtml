@model MyAcademyCarBook.EntityLayer.Concrete.CarStatus
@{
    ViewData["Title"] = "UpdateCarStatus";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araba Durum Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="CarStatusId"class="form-control"/>
    <label>Araba Durum Başlığı</label>
    <input type="text" class="form-control" asp-for="CarStatusName" style="border:1px solid #222" />
    <br />
    <button class="btn btn-primary">Durum Güncelle</button>
</form>


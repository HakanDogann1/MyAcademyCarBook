@model List<MyAcademyCarBook.EntityLayer.Concrete.Brand>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <table class="table table-bordered" style="text-align:center;">
        <tr>
            <th>#</th>
            <th>Marka</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.BrandId</th>
                <td>@item.BrandName</td>
                <td>@item.Status</td>
                <td><a href="/Brand/DeleteBrand/@item.BrandId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Brand/UpdateBrand/@item.BrandId" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Brand/AddBrand" class="btn btn-outline-success">Ekle</a>
</div>